<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bikeStationViewName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:text="@string/station_name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/numTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bikeStationViewName"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:text="#" />

    <TextView
        android:id="@+id/bikeStationViewNumber"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bikeStationViewName"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/numTitle"/>

    <ImageView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_below="@+id/bikeStationViewName"
        android:layout_marginStart="43dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/bikeStationViewNumber"
        android:src="@drawable/map_icon" />


    <TextView
        android:id="@+id/bikeStationViewDistance"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_below="@+id/bikeStationViewName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/distance" />

    <ImageView
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_below="@+id/bikeStationViewName"
        android:layout_marginStart="209dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/bikeStationViewNumber"
        android:src="@drawable/error_icon" />

    <TextView
        android:id="@+id/bikeStationViewReports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bikeStationViewName"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/report" />


    <TextView
        android:id="@+id/bikeStationViewAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bikeStationViewName"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/bike" />

    <ImageView
        android:id="@+id/bike"
        android:layout_width="22dp"
        android:layout_height="19dp"
        android:layout_below="@+id/bikeStationViewName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/bike_icon" />


</RelativeLayout>