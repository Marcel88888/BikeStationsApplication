<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    app:layout_height="match_parent"
    app:columnCount="2"
    app:rowCount="10"


    <TextView
        android:id="@+id/detailsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Details"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_column="0"
        android:layout_row="0" />


    <TextView
        android:id="@+id/numberTitle"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="Number"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/numberTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/addressTitle"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="Address"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addressTV"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/totalTitle"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="Total"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/totalTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_alignParentStart="false"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/availableTitle"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="Available"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/availableTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_row="4" />

    <TextView
        android:id="@+id/freeTitle"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="Free"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/freeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_row="5" />

    <TextView
        android:id="@+id/coordinatesTitle"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="Coordinates"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coordinatesTV"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp" />

    <TextView
        android:id="@+id/distanceTitle"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="Distance"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/distanceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp" />


    <TextView
        android:id="@+id/reportsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Reports"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_column="0"
        android:layout_row="8" />


    <ListView
        android:id="@+id/reportsLV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="bottom|fill_vertical"
        android:layout_row="9" />


</GridLayout>