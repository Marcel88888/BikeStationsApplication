<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bikestationviewname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:text="@string/station_name"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/bikestationviewavailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bikestationviewname"
        android:layout_marginStart="279dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/bike"
        android:text="avail" />

    <TextView
        android:id="@+id/numTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bikestationviewname"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:text="#" />

    <TextView
        android:id="@+id/bikestationviewnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bikestationviewname"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/numTitle"
        android:text="stat_num" />

    <ImageView
        android:id="@+id/bike"
        android:layout_width="22dp"
        android:layout_height="19dp"
        android:layout_below="@+id/bikestationviewname"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/icons8_march_50" />

</RelativeLayout>